<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:screenOrientation="portrait" android:background="#ff000000" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <Button 
        android:id="@+id/AcademicButton" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="@string/academic_button" />
    <Button 
        android:id="@+id/FinalsButton" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="@string/finals_button" 
        android:layout_below="@id/AcademicButton" />
    <Button 
        android:id="@+id/ChapelButton" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="@string/chapel_button" 
        android:layout_below="@id/FinalsButton" />
</RelativeLayout>